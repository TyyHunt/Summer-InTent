<br><br>
<h3>Changing up the plan? No problem!</h3>
<br>
<form action="/plans/<%= @plan.id %>"  method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="location">Where are you headed to:</label>
    <input type="text" class="form-control" id="location" value="<%= @plan.location %>" name="location">
  </div>
  <div class="form-group">
    <label for="party_number">How many people will be joining you:</label>
    <input type="number" class="form-control" id="party_number" value="<%= @plan.party_number %>" name="party_number">
  </div>
  <div class="form-group">
    <label for="shelter_type">What will you be staying in:</label>
    <input type="text" class="form-control" id="shelter_type" value="<%= @plan.shelter_type %>" name="shelter_type">
  </div>
  <% if correct_user?(@plan.user) %>
    <button type="submit" value="submit" class="btn btn-primary">Update</button>
  <% end %>
</form>
<% if correct_user?(@plan.user) %>
  <form action="/plans/<%= @plan.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
<% end %>