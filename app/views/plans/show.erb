  <br><br>
  
  <div class="single-post">
    <div class="card">
      <div class="card-header">
        <i class="fas fa-map-signs"></i><%= @plan.user.username %>
      </div>
      <div class="card-body">
        <div class="post-body">
          <p>Going to <%= @plan.location %></p>
          <p>With <%= @plan.party_number %> people</p>
          <p>I'll be staying in a <%= @plan.shelter_type %></p>
          <% if correct_user?(@plan.user) %>
            <button type="button" class="btn btn-success"><a href="/plans/<%= @plan.id %>/edit">Edit</a></button>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
